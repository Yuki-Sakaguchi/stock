{
  "manifest_version": 2,
  "name": "aem stock",
  "version": "0.0.1",
  "description": "aem専用のページストック",
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "browser_action": {
    "default_icon" : {
      "19" : "images/icon19.png",
      "38" : "images/icon38.png"
    },
    "default_title": "AEM STOCK",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "icons" : {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}