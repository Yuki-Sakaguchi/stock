{
  "manifest_version": 2,
  "name": "aem stock",
  "version": "0.0.1",
  "description": "aem専用のページストック",
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
    }
  ],
  "browser_action": {
    "default_icon" : {
      "19" : "./assets/images/icon19.png",
      "38" : "./assets/images/icon38.png"
    },
    "default_title": "AEM STOCK",
    "default_popup": "popup.html"
  },
  "icons" : {
    "16": "./assets/images/icon16.png",
    "48": "./assets/images/icon48.png",
    "128": "./assets/images/icon128.png"
  }
}